@model EventDetail

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string path = ViewBag.ImagePath;
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div>
        <hr />
        <div class="row">
            <dl class="col-6">
                <dd class="col-sm-10">
                    <h2>@Html.DisplayFor(model => model.Title)</h2>
                </dd>
                <dd class="col-sm-10">
                    <h4>@Html.DisplayFor(model => model.Message)</h4>
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EventTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventTime)
                </dd>
                <dt class="col-sm-2">
                    <label>Registration Timeline:</label>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RegistrationStartDate) - @Html.DisplayFor(model => model.RegistrationEndDate)
                </dd>
                <dd>
                    @foreach (var item in Model.EventItem)
                    {
                        <div class="col-3">
                            <img src="@path@item.Image" style="max-height:200px;max-width:200px" />
                            <p>@item.ItemName</p>
                        </div>
                    }
                </dd>
            </dl>
            <div class="col-6">
                <div>
                    <img id="previewImage" src="@Url.Content(path + Model.MainImage)" style="max-height:500px;max-width:500px" />
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EventId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
